{
  "name": "push-markdown",
  "version": "2.1.1",
  "private": true,
  "description": "将本地markdown推送到WordPress",
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "author": {
    "name": "szx",
    "email": "szy110110@qq.com",
    "url": "https://szx.life"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "pnpm build:main && pnpm build:preload && pnpm build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production pnpm build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "win": "cross-env MODE=production pnpm build && electron-builder build --config .electron-builder.config.js --win",
    "mac": "cross-env MODE=production pnpm build && electron-builder build --config .electron-builder.config.js --mac",
    "watch": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "pnpm typecheck:main && pnpm typecheck:preload && pnpm typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 npx --no-install electron ./scripts/update-electron-vendors.mjs "
  },
  "dependencies": {
    "@sindresorhus/slugify": "^2.1.0",
    "dayjs": "^1.11.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.2.1",
    "filenamify": "^5.1.1",
    "front-matter": "^4.0.2",
    "he": "^1.2.0",
    "highlight.js": "^11.6.0",
    "html-to-text": "8.2.1",
    "lodash-es": "^4.17.21",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-mathjax3": "^4.3.1",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "markdown-it-title": "^4.0.0",
    "markdown-it-underline": "^1.0.1",
    "metaweblog-api": "^1.2.0",
    "natural-compare-lite": "^1.4.0",
    "transliteration": "^2.3.5",
    "vite": "^3.0.9",
    "vue": "^3.2.38",
    "vue-i18n": "^9.2.2"
  },
  "devDependencies": {
    "@types/he": "^1.1.2",
    "@types/html-to-text": "^8.1.0",
    "@types/lodash-es": "^4.17.6",
    "@types/markdown-it": "^12.2.3",
    "@types/natural-compare-lite": "^1.4.0",
    "@types/node": "^18.6.3",
    "@types/uslug": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vitejs/plugin-vue": "3.0.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "cross-env": "7.0.3",
    "electron": "^20.1.1",
    "electron-builder": "23.3.3",
    "eslint": "^8.21.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.3.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.0",
    "typescript": "^4.7.4",
    "unplugin-auto-expose": "0.0.2",
    "vue-tsc": "0.39.4"
  },
  "license": "Apache-2.0"
}
